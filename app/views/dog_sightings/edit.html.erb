<h1>Edit Dog Sighting</h1>

<%= form_with model: @dog_sighting, local: true do |form| %>
  <% if @dog_sighting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@dog_sighting.errors.count, "error") %> prohibited this dog sighting from being saved:</h2>
      <ul>
        <% @dog_sighting.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :dog_description %>
    <%= form.text_field :dog_description %>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location %>
  </div>

  <div class="field">
    <%= form.label :city_id %>
    <%= form.collection_select :city_id, City.all, :id, :city_name, prompt: "Select City" %>
  </div>

  <div class="actions">
    <%= form.submit "Update Dog Sighting", class: 'btn' %>
  </div>
<% end %>

<%= link_to 'Back', dog_sightings_path, class: 'btn' %>
<%= button_to 'Delete', dog_sighting_path(@dog_sighting), method: :delete, data: { confirm: 'Are you sure you want to delete this dog sighting?' }, class: 'btn btn-danger' %>